{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate Premake Project",
      "group": "build",
      "type": "shell",
      
      "command": "premake5",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "osx": {
        "args": [
          "gmake2"
        ]
      },
      "windows": {
        "args": [
          "vs2019"
        ]
      },
      "problemMatcher": []
    },
    {
      "label": "Build (Release)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "osx": {
        "type": "shell",
        "command": "make",
        "args": [
          "--jobs=8",
          "config=release_x64"
        ],
        "options": {
          "cwd": "${workspaceRoot}/build"
        },
        "problemMatcher": {
          "owner": "cpp",
          "fileLocation": [
            "relative",
            "${workspaceRoot}/build"
          ],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      },
      "windows": {
        "type": "process",
        "command": "cmd",
        "args": [
          "/C %vcvarsall% && msbuild /property:GenerateFullPaths=true /t:%operation% /p:Platform=%platform% /p:Configuration=%configuration% build/game.sln"
        ],
        "options": {
          "env": {
            "operation": "Build",
            "platform": "x86_64",
            "configuration": "Release",
            "vcvarsall": "\"C:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\Community\\VC\\Auxiliary\\Build\\vcvarsall.bat\" x64"
          }
        },
        "problemMatcher": [
          "$msCompile"
        ]
      }
    },
    {
      "label": "Build (Debug)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "osx": {
        "type": "shell",
        "command": "make",
        "args": [
          "--jobs=8",
          "config=debug_x64"
        ],
        "options": {
          "cwd": "${workspaceRoot}/build"
        },
        "problemMatcher": {
          "owner": "cpp",
          "fileLocation": [
            "relative",
            "${workspaceRoot}/build"
          ],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      },
      "windows": {
        "command": "cmd",
        "type": "process",
        "args": [
          "/C %vcvarsall% && msbuild /property:GenerateFullPaths=true /t:%operation% /p:Platform=%platform% /p:Configuration=%configuration% build/game.sln"
        ],
        "options": {
          "env": {
            "operation": "Build",
            "platform": "x86_64",
            "configuration": "Debug",
            "vcvarsall": "\"C:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\Community\\VC\\Auxiliary\\Build\\vcvarsall.bat\" x64"
          }
        },
        "problemMatcher": [
          "$msCompile"
        ]
      }
    },
    {
      "label": "Clean (Release)",
      "group": "build",
      "problemMatcher": [],
      "osx": {
        "type": "shell",
        "command": "make",
        "args": [
          "config=release_x64",
          "clean"
        ],
        "options": {
          "cwd": "${workspaceRoot}/build"
        },
      },
      "windows": {
        "command": "cmd",
        "type": "process",
        "args": [
          "/C %vcvarsall% && msbuild /property:GenerateFullPaths=true /t:%operation% /p:Platform=%platform% /p:Configuration=%configuration% build/game.sln"
        ],
        "group": "build",
        "options": {
          "env": {
            "operation": "Clean",
            "platform": "x86_64",
            "configuration": "Release",
            "vcvarsall": "\"C:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\Community\\VC\\Auxiliary\\Build\\vcvarsall.bat\" x64"
          }
        },
      },
    },
    {
      "label": "Clean (Debug)",
      "group": "build",
      "problemMatcher": [],
      "osx": {
        "type": "shell",
        "command": "make",
        "args": [
          "config=debug_x64",
          "clean"
        ],
        "options": {
          "cwd": "${workspaceRoot}/build"
        },
      },
      "windows": {
        "command": "cmd",
        "type": "process",
        "args": [
          "/C %vcvarsall% && msbuild /property:GenerateFullPaths=true /t:%operation% /p:Platform=%platform% /p:Configuration=%configuration% build/game.sln"
        ],
        "options": {
          "env": {
            "operation": "Clean",
            "platform": "x86_64",
            "configuration": "Debug",
            "vcvarsall": "\"C:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\Community\\VC\\Auxiliary\\Build\\vcvarsall.bat\" x64"
          }
        },
      }
    }
  ]
}